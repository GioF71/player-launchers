{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Squeezelite for onboard audio",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/runner/sq-runner.py",
            "console": "integratedTerminal",
            "env": {
                "SQUEEZELITE_AUDIO_DEVICE": "hw:CARD=DAC",
                "SQUEEZELITE_SERVER_PORT": "lms.homelab.local",
                "SQUEEZELITE_LINEAR_VOLUME": "no",
                "SQUEEZELITE_RESTART_ON_FAIL": "yes",
                "SQUEEZELITE_NAME": "Aune X1s Vanilla",
                "SQUEEZELITE_MODEL": "SqueezeLite"
            }
        },
        {
            "name": "MPD",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/runner/mpd-runner.py",
            "console": "integratedTerminal",
            "env": {
                "MPD_BINARY_PATH": "/home/giovanni/.local/bin/mpd-0.24.3-ups",
                "CACHE_DIRECTORY": "tmp",
                "INSTANCE_NAME": "mpd-openhome-test",
                "MUSIC_DIRECTORY_": "~/Music",
                "LOG_LEVEL_": "info",
                "LOG_FILE_NAME_": "mpd.log",
                "PID_FILE_": "/some/pid/file",
                "CONFIG_FILE_NAME_": "mpd-oh.conf",
                "MPD_BIND_ADDRESS": "0.0.0.0",
                "MPD_PORT": "6601",
                "RESTORE_PAUSED_": "yes",
                "ENABLE_STATE_FILE_": "yes",
                "OUTPUT_CREATE": "yes",
                "OUTPUT_TYPE": "null",
                "OUTPUT_NAME": "Out0: Null Output",
                "OUTPUT_SYNC": "yes",
                "OUTPUT_CREATE_1": "yes",
                "OUTPUT_TYPE_1": "alsa",
                "OUTPUT_NAME_1": "Out1: DAC",
                "OUTPUT_ENABLED_": "no",
                "OUTPUT_DEVICE_1": "hw:DAC",
                "OUTPUT_MIXER_TYPE_1": "software",
                "_OUTPUT_MIXER_INDEX_1": "1",
                "_OUTPUT_MIXER_CONTROL_1": "c",
                "OUTPUT_CREATE_2": "yes",
                "OUTPUT_TYPE_2": "pipewire",
                "OUTPUT_NAME_2": "Out2: Pipewire",
                "OUTPUT_DSD_2": "no",
                "OUTPUT_CREATE_3": "yes",
                "OUTPUT_TYPE_3": "pulse",
                "OUTPUT_MEDIA_ROLE_3": "MPD on PulseAudio",
                "OUTPUT_NAME_3": "Out3: PulseAudio",
                "MPD_RUNNING_MODE_": "no-daemon",
                "MPD_RUN_WITH_STDERR": "yes",
                "MPD_RUN_WITH_VERBOSE": "no",
                "_SAMPLERATE_CONVERTER": "soxr very high",
                "RESAMPLER_SOXR_CREATE": "yes",
                "SOXR_QUALITY": "custom",
                "SOXR_PRECISION": "28",
                "SOXR_PHASE_RESPONSE": "45",
                "SOXR_PASSBAND_END": "95.0",
                "SOXR_STOPBAND_BEGIN": "100.0",
                "SOXR_ATTENUATION": "1.0",
                "SOXR_FLAGS": "0",
                "DECODER_FFMPEG_CREATE": "yes",
                "DECODER_FFMPEG_ENABLED": "yes"
            }
        }
    ]
}